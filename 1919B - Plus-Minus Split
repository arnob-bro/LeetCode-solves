#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>> t;
    while(t--)
    {
        int n,res=0,minuss=0,pluss=0;

        string s;
        cin>>n;
        cin>>s;
        for(int i=0;i<n;i++)
        {
            if(s[i] == '+')
            {
                res++;

            }
            else if(s[i] == '-')
            {
                res--;
            }

        }

        cout<<abs(res)<<endl;


    }

}

